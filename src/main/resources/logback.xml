		</rollingPolicy>
		
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
	</appender> -->
    
    <!-- APPLICATION LOGGER -->
    <logger name="TIG" level="DEBUG">
		<appender-ref ref="Console-Adapter" />
    	<!-- <appender-ref ref="File-Appender" /> -->
   		<!-- <appender-ref ref="FILE" /> -->
    </logger>

	<!-- ROOT LOGGER -->
	<root level="TRACE" additivity="false">
		<appender-ref ref="Console-Adapter" />
    </root>
</configuration>