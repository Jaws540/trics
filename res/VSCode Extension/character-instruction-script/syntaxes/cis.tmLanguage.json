{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Character Instruction Script",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#raw-types"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.number-sign.cis",
			"match": "#.*$"
		},
		"keywords": {
			"name": "keyword.control.cis",
			"match": "\\b(script|if|else|while)\\b|'d'"
		},
		"operators": {
			"name": "keyword.cis",
			"match": "\\b(and|or|not)\\b"
		},
		"raw-types": {
			"name": "constant.language.cis",
			"match": "\\b(true|false|null)\\b"
		},
		"strings": {
			"name": "string.quoted.double.cis",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cis",
					"match": "\\\\."
				}
			]
		},
		"functions": {
			"name":"entity.name.function.cis",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_:]*\\("
		},
		"identifiers": {
			"name":"variable.other.readwrite.cis",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_:]*\\b"
		},
		"numbers": {
			"name": "constant.numeric.cis",
			"match": "\\b[0-9]+\\b"
		}
	},
	"scopeName": "source.rpgs"
}